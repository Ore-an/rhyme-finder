import nltk

vocab = nltk.corpus.cmudict.entries()

#Takes every pronunciation of the word, checks rhymes
def rhyme(word):
    for entry, pron in vocab:
        if entry == word:
            print(checkpron(pron), end=' ')
            print('\n')

#Checks stress indications in pronounciation, 1 = main stress 
def stress(pron):
    return phone.index() for phone in pron for num in phone if num.isdigit('1')

#Returns words with same pronounciation after stress
def checkpron(rhpron):
    for word, pron in vocab:
        if rhpron[stress(rhpron):] == pron[stress(pron):]:
            return word
    
